<h3>予定詳細</h3>
<div>
  <ul>
    <li><%= link_to "予定一覧に戻る", :plans %></li>
  </ul>
</div>

<table>
  <tr>
    <th>名前</th>
    <td><%= @plan.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @plan.start_day %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @plan.finish_day %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @plan.memo %></td>
  </tr>
</table>

