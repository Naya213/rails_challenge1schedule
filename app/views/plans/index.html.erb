<h3>スケジュール一覧</h3>
 <% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
 <% end %>

 <p><%= link_to "新規追加", :new_plan %></p>
 
 <table>
   <thead>
     <tr>
       <th>id</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>更新日</th>
       <th>参照</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>
 
   <tbody>
     <% @plans.each do |plan| %>
       <tr>
         <td><%= plan.id %></td>
         <td><%= plan.title %></td>
         <td><%= plan.start_day.strftime("%Y/%m/%d") %></td>
         <td><%= plan.finish_day.strftime("%Y/%m/%d") %></td>
         <td><%= plan.all_day ? '⚪︎' : '×' %></td>
         <td><%= plan.updated_at.to_s(:datetime_jp) %></td>
         <td>
         <%= link_to "参照",plan_path(plan) %>
         </td>
         <td>
         <%= link_to "編集", edit_plan_path(plan) %>
         </td>
         <td>
         <%= link_to "削除", plan_path(plan), method: :delete, data: { confirm: "本当に削除しますか？" } %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>

 <ul>
    <li>
        予定合計 <span><%= @record_count %><span>件
    </li>
    <li>
        本日の日付<span><%= @now_date.strftime("%Y/%m/%d") %></span>
    </li>
 </ul>
 
